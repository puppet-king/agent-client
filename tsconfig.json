{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext", // 表示使用最新的 ECMAScript 特性
    "module": "esnext", // esnext 表示使用 ES6+ 模块语法
    "jsx": "preserve", // preserve 表示保留 JSX 语法
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"], // 包含声明文件,
    "resolveJsonModule": true,
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
